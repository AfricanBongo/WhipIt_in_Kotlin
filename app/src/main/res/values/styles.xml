<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView" />

    <!-- TextView styles for subtitle text -->
    <style name="TextViewStyle.Headline">
        <item name="android:fontFamily">@font/patua_one_regular</item>
    </style>
    <style name="TextViewStyle.Subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="TextViewStyle.Caption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>
    <style name="TextViewStyle.Headline.3">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
    </style>
    <style name="TextViewStyle.Headline.5">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>
    <style name="TextViewStyle.Subtitle.1">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
    <style name="TextViewStyle.Subtitle.2">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    </style>
    <style name="TextViewStyle.Headline.3.OnBackground">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="TextViewStyle.Headline.5.OnPrimary">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewStyle.Headline.5.OnSurface">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewStyle.Subtitle.1.Primary">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewStyle.Subtitle.2.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
    <style name="TextViewStyle.Caption.Primary">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewStyle.Caption.OnPrimary">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TextView with drawable styles -->
    <style name="IconTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingVertical">@dimen/minute_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/curved_background</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/roboto_regular</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
    </style>
    <style name="RatingTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingVertical">@dimen/minute_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:drawablePadding">@dimen/minute_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/curved_background</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:drawableTint">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/roboto_regular</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ChipOverlay</item>
        <item name="chipIconEnabled">false</item>
        <item name="chipStrokeColor">@color/chip_stroke_tint</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/chip_background_tint</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ChipOverlay" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>